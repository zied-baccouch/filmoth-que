    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ acteur.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ acteur.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
